{
  "name": "shared",
  "version": "0.0.2",
  "type": "commonjs",
  "scripts": {
    "test": "vitest",
    "prepublishOnly": "run-s cases",
    "build:json-script": "tsx src/tools/gen-script.ts ./src/test-cases ./src/test-cases-json > bin/tests-to-json.ts",
    "build:cases": "tsx bin/tests-to-json.ts",
    "cases": "run-s build:json-script build:cases",
    "watch": "nodemon --ext ts --watch src/test-cases --watch src/tools --watch src/TestSchema.ts --exec \"pnpm cases\""
  },
  "files": [
    "bin"
  ],
  "bin": "bin/wgsl-link",
  "devDependencies": {
    "@esbuild-plugins/tsconfig-paths": "^0.1.2",
    "@types/node": "^20.11.30",
    "@types/yargs": "^17.0.32",
    "esbuild": "^0.20.2",
    "glob": "^11.0.0",
    "nodemon": "^3.1.4",
    "npm-run-all": "^4.1.5",
    "tsx": "^4.7.1",
    "vitest": "^1.4.0",
    "yargs": "^17.7.2"
  }
}
