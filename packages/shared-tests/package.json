{
  "name": "shared",
  "version": "0.0.2",
  "type": "commonjs",
  "scripts": {
    "test": "vitest",
    "prepublishOnly": "run-s cases",
    "build:gen-script": "esbuild --bundle --platform=node --outfile=bin/gen-script src/tools/gen-script.ts",
    "build:json-script-ts": "node bin/gen-script ./src/test-cases ./src/test-cases-json > bin/tests-to-json.ts",
    "build:json-script:": "esbuild --bundle --platform=node --outfile=bin/tests-to-json bin/tests-to-json.ts",
    "build:all-scripts": "run-s build:gen-script build:json-script-ts build:json-script",
    "build:cases": "node bin/tests-to-json",
    "cases": "run-s build:all-scripts build:cases"
  },
  "files": [
    "bin"
  ],
  "bin": "bin/wgsl-link",
  "devDependencies": {
    "@esbuild-plugins/tsconfig-paths": "^0.1.2",
    "@types/node": "^20.11.30",
    "@types/yargs": "^17.0.32",
    "esbuild": "^0.20.2",
    "glob": "^11.0.0",
    "nodemon": "^3.1.4",
    "npm-run-all": "^4.1.5",
    "vitest": "^1.4.0",
    "yargs": "^17.7.2"
  }
}
